# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/agriintel360
MONGODB_URL=mongodb://user:password@mongo:27017/agriintel360
REDIS_URL=redis://:password@redis:6379
ELASTICSEARCH_URL=http://elasticsearch:9200

# JWT & Security
JWT_SECRET_KEY=a_very_secret_key_that_should_be_changed
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
FAO_API_KEY=your_fao_api_key_here
WORLD_BANK_API_KEY=your_world_bank_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# AI/ML Configuration  
OPENAI_API_KEY=your_openai_api_key_here
HF_TOKEN=your_huggingface_token_here
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_smtp_password

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Application Settings
ENVIRONMENT=development
DEBUG=True
API_V1_STR=/api/v1
PROJECT_NAME=AgriIntel360
VERSION=1.0.0

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Upload
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600  
CACHE_TTL_LONG=86400
